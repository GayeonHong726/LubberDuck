<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.lec.spring.repository.menuplate.MenuRepository">

    <sql id="SELECT_BASE">
        SELECT
            name "name"
             , img_url "imgUrl"
             , info "info"
        FROM ctt_menuplate
        WHERE 1 = 1
    </sql>

    <select id="findByName" resultType="com.lec.spring.domain.menuplate.Menu">
        <include refid="SELECT_BASE"/>
        AND id = #{id}
    </select>

    <select id="findAll" resultType="com.lec.spring.domain.menuplate.Menu">
        <include refid="SELECT_BASE"/>
    </select>

</mapper>






